


<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2 ">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        
          <div class="field">
            <div class="control">
              <%= f.input :email,
                  required: false, input_html: {class:'input'}, wrapper: false, label_html: { class: 'label'} %>
            </div>
          </div>
       
          <div class="field">
            <div class="control">
              <%= f.button :submit, "Send me reset password instructions", class: 'is-info is-2 button'%>
            </div>
          </div>
        
        <% end %>
        
        <div class="field">
          <div class="control">
            <%= render "devise/shared/links" %>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
