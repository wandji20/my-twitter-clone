<!DOCTYPE html>
<html>
  <head>
    <title>MyTwitterClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p><%= alert %></p>
      </div>
    <% end %>
    <nav class="navbar is-info">
      <div class="navbar-brand">
        <%= link_to root_path, class: 'navbar-item' do %>
          <h1 class= 'title is-5'>Twitter</h1>
        <%end%>
      </div>
      <div class="navbar-burger burger" data-target = 'navbarExample'>
        <span></span>
        <span></span>
        <span></span>
      </div>
      <div class="navbar-menu" id = 'navbarExample'>
        <div class="navbar-end">
          <div class="field is-grouped">
            <p class="control">
              <%= link_to 'New Tweet', new_tweet_path, class: 'button is-info is-inverted' %>
            </p>
            <p class="control">
               <%= link_to 'Sign Up ', new_user_registration_path, class: 'sign-up navbar-item' %>
            </p>
            <p class="control">
               <%= link_to 'Sign out ', destroy_user_session_path, method: :delete, class: 'sign-up navbar-item' %>
            </p>
          </div>
        </div>
      </div>
    </nav> 
    <%= yield %>
  </body>
</html>
